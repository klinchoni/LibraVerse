@model BookReviewQuestionViewModel

@{
    ViewBag.Title = "Добави Отзив";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h2 class="card-title" style="margin-top: 15px;">Искаш ли да добавиш отзив за тази книга?</h2>
                    <h3 class="card-title" style="margin-top: 15px;">"@Model.Title"</h3>
                </div>
                <div class="card-footer d-flex justify-content-center">
                    <form asp-action="AddReview" method="get" class="col-12">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="MyBooks" asp-route-id="@User.Id()" class="btn btn-danger mb-1 w-100 p-3 fw-bold">Не</a>
                        <button type="submit" class="btn btn-success mb-1 w-100 p-3 fw-bold">Да</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>